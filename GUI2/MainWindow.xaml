<Window x:Class="EFCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EFCore"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="450" Width="800"
        
        d:DataContext="{d:DesignInstance Type={x:Type local:MainWindowViewModel}}">
    
    <Grid>
        <DataGrid ItemsSource="{Binding Mobs}"/>
        
        <Button x:Name="Button1" Content="Button1" HorizontalAlignment="Left" Margin="690,2,0,0" VerticalAlignment="Top" Width="90"/>
        
        <Button x:Name="Button2" Content="Button2" HorizontalAlignment="Left" Margin="585,2,0,0" VerticalAlignment="Top" Width="90"/>
    </Grid>
</Window>
